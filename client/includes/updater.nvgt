string get_dl_filename() property {
	string f = "uw-c";
	#if android
	f += ".apk";
	#endif
	#if linux
	f += "-linux.zip";
	#endif
	#if mac
	f += ".app.zip";
	#endif
	#if windows
	f += ".zip";
	#endif
	return f;
}
string get_download_url() property {
	string url = app.website + "/svrfile/" + dl_filename;
	return url;
}
int check_updates(bool silent = false) {
	// 0 = success, 1 = available but canceled, -1 = internal error.
	if (!silent) speak("Checking for updates...");
	sound s;
	string ws = app.website + "/file.php?name=";
	string l = url_get(app.website + "/version.txt");
	if (l == "" || l.find("<") > -1 || l.find(">") > -1) l = app.version;
	multiversion lv(l);
	multiversion yv(app.version);
	if (lv > yv) {
		s.load("update.ogg");
		s.play();
		if (question("Update available", "A new update " + l + " is available. Download now?") == 1) {
			s.close();
			s.load("updating" + random(1, 7) + ".ogg");
			s.play_looped();
			int f = dl_file(download_url, dl_filename);
			if (f == dl_status_done) {
				s.close();
				s.load("updated.ogg");
				s.play();
				run("unzip.bat", "", false, false);
				exit();
				return 0;
			}
			s.close();
			s.load("updatefail.ogg");
			s.play();
			return 2;
		}
		s.close();
		s.load("update_canceled.ogg");
		s.play();
		alert("Update", "Update's canceled");
		return 1;
	}//Version
	if (!silent) alert("Update", "No updates available");
	return 2;
}//
