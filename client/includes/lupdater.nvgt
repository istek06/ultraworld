#include "bgt_compat.nvgt"#include "bgt_compat.nvgt"void lcfu(bool frommainmenu=false)
{
	string latest = url_get("http://aew-game.com/aew_update/laewv.txt");
	double lv = string_to_number(latest);
	string[] yourversion = string_split(langver, " ", true);
	double yv = string_to_number(yourversion[0]);
	if (yv >= lv and frommainmenu == true)
		klcfu(true);
	else if (yv < lv) {
		sound updatefound;
		updatefound.load("update.ogg");
		updatefound.play_wait();
		int updateask = question("Update available!", "a new language pack is available! Your language pack  version is: " + langver + ". The latest version is: " + latest + ". Would you like to download it?");
		if (updateask == 1) {
			string status = dl_file("http://aew-game.com/aew_update/languages.zip", "languages.zip", false, "Downloading new language pack version " + lv + "...");
			if (status == "finished") {
				sound updatedone;
				sound updatemus;
				updatemus.stop();
				updatedone.load("updated.ogg");
				updatedone.play_wait();
				bool result = run("unzip.exe", "-o -qq languages.zip", true, true);
				if (result == true) {
					dlg("language pack has been downloaded successfully. Press enter to continue");
					file_delete("languages.zip");
					run("c:\\windows\\explorer.exe", "\"" + self_file() + "\"", false, false);
					exit();
				} else {
					dlg("language pack has been downloaded successfully. Please extract languages.zip. Press enter to continue");
					exit();
				}
			}
		}
	}
}