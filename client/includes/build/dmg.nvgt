void builddmg() {
	string nums = "1234567890-";
	string mx, mmx, my, mmy, mz, mmz, id;
	form.create_window("dmg", false);
	int a = form.create_input_box("type the minimum x of the death message",lx);
	int b = form.create_input_box("type the maximum x of the death message",rx);
	int c = form.create_input_box("type the minimum y of the death message",by);
	int d = form.create_input_box("type the maximum y of the death message",fy);
	int e = form.create_input_box("type the minimum z of the death message",bz);
	int f = form.create_input_box("type the maximum z of the death message",tz);
	int g = form.create_input_box("type the message of the death message (supports dynamic map variables)", "", "", 0, false, true, false);
	form.set_disallowed_chars(a, nums, true);
	form.set_disallowed_chars(b, nums, true);
	form.set_disallowed_chars(c, nums, true);
	form.set_disallowed_chars(d, nums, true);
	form.set_disallowed_chars(e, nums, true);
	form.set_disallowed_chars(f, nums, true);
	int ok = form.create_button("finish", false);
	int can = form.create_button("cancel", false, true);
	form.focus(a);
	while (true) {
		wait(5);
		form.monitor(); mainloop();
		mx = form.get_text(a);
		mmx = form.get_text(b);
		my = form.get_text(c);
		mmy = form.get_text(d);
		mz = form.get_text(e);
		mmz = form.get_text(f);
		id = form.get_text(g);
		if (form.is_pressed(ok)) {
			form.reset();
			break;
		} else if (form.is_pressed(can)) {
			form.reset();
			return;
		}
	}//while
	if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || id == "") {
		speak("canceled");
		return;
	}
	string se = "dmg:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + id;
	send(0, buildadd + " " + se, 0);
	return;
}
