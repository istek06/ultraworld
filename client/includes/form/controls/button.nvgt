class nv_form_button: nv_form_control {
	bool pressed;
	nv_form_button(nv_form@parent, string caption, string id = "", bool pressed = false) {
		super(caption, id, nv_form_ct_button, @parent);
		this.pressed = pressed;
	}
	bool monitor() { return this.pressed; }
	void fire() {
		this.pressed = true;
		nv_form_control::fire();
	}
	bool handle_input() {
		if (key_pressed(KEY_SPACE) || key_pressed(KEY_RETURN) || key_pressed(KEY_NUMPAD_ENTER)) {
			this.fire();
			return true;
		}
		return false;
	}
}
