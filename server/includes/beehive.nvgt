	beehive(int bx, int by, int bz, string bmap, string bowner, int bhealth, string bbeehivemap) {
		x = bx;
		y = by;
		z = bz;
		map = bmap;
		owner = bowner;
		health = bhealth;
		beehivemap = bbeehivemap;
		tempsd.fn = "beehives/" + beehivemap + ".beehive";
		tempsd.key = "dl_beehive";
	}
