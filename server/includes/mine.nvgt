#include "bgt_compat.nvgt"#include "bgt_compat.nvgt"mine@[] mines(0);
class mine {
	player@owner;
	int z;
	mapdata@map;
	int x, y;
	bool d = false;
	int pindex = -1;
	int range = 6;
	mine(int wx, int wy, int wz, mapdata@m, player@p) {
		@owner = p;
		x = wx;
		y = wy;
		z = wz;
		@map = m;
		send_packet(6, "play mineplace.ogg " + x + " " + y + " " + z, x, y, z, map);
	}
	void loop(int i) {
		if (@map == null or @owner == null) {
			mines.remove_at(i);
			return;
		}
		if (d == false) {
			for (uint px = 0; px < players.length(); px++) {
				if (players[px].map != map.name) continue;
				if (get_3d_distance(x, y, z, players[px].x, players[px].y, players[px].z) > range) continue;
				if (players[px].is_dead or is_safe(players[px].x, players[px].y, players[px].z, maps[get_map_index(players[px].map)]) or players[px].safe or players[px].pvp == 0 or players[px].away or players[px].newb == 1 or players[px].name == owner.name or players[px].looking != "") continue;
				d = true;
				break;
			}
		}
		if (d == true) {
			send_packet(6, "play mineexplode.ogg " + x + " " + y + " " + z, x, y, z, map);
			for (uint i2 = 0; i2 < players.length(); i2++) {
				if (players[i2].map != map.name) continue;
				if (get_3d_distance(x, y, z, players[i2].x, players[i2].y, players[i2].z) > 10) continue;
				if (players[i2].is_dead or is_safe(players[i2].x, players[i2].y, players[i2].z, map) or players[i2].safe or players[i2].pvp == 0 or players[i2].away or players[i2].newb == 1) continue;
				
				players[i2].stun(5000);
				players[i2].health -= random(200, 500);
				players[i2].hitby = owner.name + "'s mine";
				send_packet(6, "play v" + string_to_number(players[i2].voice) + "hit" + random(1, 5) + ".ogg " + players[i2].x + " " + players[i2].y + " " + players[i2].z, players[i2].x, players[i2].y, players[i2].z, map);
			}
			mines.remove_at(i);
			return;
		}
	}
}
void spawn_mine(int x, int y, int z, mapdata@m, player@p) {
	x++;
	mine bomb1(x, y, z, m, p);
	if (@bomb1.map == null or @bomb1.owner == null) return;
	else mines.insert_last(bomb1);
}
void destroy_all_mines() {
	mines.resize(0);
}
